---
import { Icon } from "astro-icon";
export interface Props {
  label?: string;
  class?: string;
  iconClass?: string;
  iconName?: string;
}
const {
  label = "Toggle between Dark and Light mode",
  class: className = "inline-flex items-center btn btn-ghost",
  iconClass = "w-6 h-6",
  iconName = "tabler:sun",
} = Astro.props;
---

<button
  type="button"
  class={className}
  aria-label={label}
  data-aw-toggle-color-scheme
>
  <Icon name={iconName} class={iconClass} />
</button>
