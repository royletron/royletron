---
import Item from "~/components/blog/ListItem.astro";
import type { Post } from "~/types";
export interface Props {
  posts: Array<Post>;
}
const { posts } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-5 px-4">
  {
    posts.map((post) => (
      <Item post={post} />
    ))
  }
</ul>
