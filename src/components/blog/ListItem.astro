---
import { Picture } from "@astrojs/image/components";
import PostTags from "~/components/blog/Tags.astro";
import type { Post } from "~/types";
import { getPermalink } from "~/utils/permalinks";
import { findImage } from "~/utils/images";
import Subtitle from "./Subtitle.astro";
export interface Props {
  post: Post;
}
const { post } = Astro.props;
const image = await findImage(post.image);
const link = getPermalink(post.permalink);
---

<article
  class={`max-w-md mx-auto md:max-w-none grid gap-6 md:gap-8 ${
    image ? "md:grid-cols-2" : ""
  }`}
>
  {
    image && (
      <a class="relative block group" href={link ?? "javascript:void(0)"}>
        <div class="relative h-0 pb-[56.25%] md:pb-[75%] md:h-72 lg:pb-[56.25%] overflow-hidden bg-base-200 rounded shadow-lg">
          {image && (
            <Picture
              src={image}
              class="absolute inset-0 object-cover w-full h-full mb-6 rounded shadow-lg bg-base-300"
              widths={[400, 900]}
              sizes="(max-width: 900px) 400px, 900px"
              alt={post.title}
              aspectRatio="16:9"
            />
          )}
        </div>
      </a>
    )
  }
  <div class="mt-2">
    <header>
      <div class="mb-1">
        <Subtitle publishDate={post.publishDate} category={post.category} />
      </div>
      <h2 class="text-xl sm:text-2xl font-bold leading-tight mb-2 font-heading">
        {
          link ? (
            <a class="link transition ease-in duration-200" href={link}>
              {post.title}
            </a>
          ) : (
            post.title
          )
        }
      </h2>
    </header>

    {post.excerpt && <p class="flex-grow prose-body text-lg">{post.excerpt}</p>}
    <footer class="mt-5">
      <PostTags tags={post.tags} />
    </footer>
  </div>
</article>
