---
import { Picture } from "astro:assets";
import PostTags from "~/components/blog/Tags.astro";
import type { Post } from "~/types";
import { getPermalink } from "~/utils/permalinks";
import { findImage } from "~/utils/images";
import Subtitle from "./Subtitle.astro";
export interface Props {
  post: Post;
}
const { post } = Astro.props;
const image = post.image
const link = getPermalink(post.permalink);
---

<article
  class={`max-w-md mx-auto md:max-w-none grid gap-6 md:gap-8 col-span-2 md:col-span-1 bg-black bg-opacity-20 w-full p-6 rounded-lg`}
>
  <div class="mt-2 flex flex-col">
    <header>
      <div class="mb-1">
        <Subtitle publishDate={post.publishDate} category={post.category} />
      </div>
      <h2 class="text-xl sm:text-2xl font-bold leading-tight mb-2 font-heading">
        {
          link ? (
            <a class="link transition ease-in duration-200" href={link}>
              {post.title}
            </a>
          ) : (
            post.title
          )
        }
      </h2>
    </header>

    {post.excerpt && <p class="flex-grow prose-body text-lg flex-1">{post.excerpt}</p>}
    <footer class="mt-5">
      <PostTags tags={post.tags} />
    </footer>
  </div>
</article>
